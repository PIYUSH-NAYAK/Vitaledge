# Backend Environment Configuration Template
# Copy this file to .env and update with your actual credentials

# Database Configuration
# MongoDB Atlas connection string
URI=mongodb+srv:your_id_password/VitalEdge

# Secret Key for JWT or other security purposes
SECRET_KEY="your-secret-key-here"

# Firebase Admin SDK Configuration
# Get these from Firebase Console -> Project Settings -> Service Accounts -> Generate New Private Key
FIREBASE_PROJECT_ID="your-project-id"
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project-id.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour_Private_Key_Content_Here_Each_Line_Separated_By_\\n\nReplace_This_With_Your_Actual_Private_Key_From_Firebase\n-----END PRIVATE KEY-----"

# Firebase Client Configuration (for frontend)
VITE_FIREBASE_API_KEY=AIzaSyExample123456789abcdefghijklmnop
VITE_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project-id
VITE_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=123456789012
VITE_FIREBASE_APP_ID=1:123456789012:web:abcdef1234567890abcdef
VITE_FIREBASE_MEASUREMENT_ID=G-ABCD123456

# Cloudinary Configuration (for image storage and optimization)
# Get these from Cloudinary Dashboard -> Settings -> Security
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=000000000000000
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# Email Configuration (for OTP verification)
# Use app-specific password for Gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-specific-password

# Server Configuration
PORT=7777
NODE_ENV=development

# ======================
# Solana / Blockchain Configuration
# ======================
# LOCAL DEVELOPMENT: Path to your Solana wallet keypair JSON file
SOLANA_WALLET_PATH=/path/to/your/solana-wallet/keypair.json

# PRODUCTION (Render/Cloud): Use the private key directly as JSON array
# Get this from your keypair.json file content: cat /path/to/keypair.json
# Example: SOLANA_PRIVATE_KEY=[52,123,45,67,...]
# SOLANA_PRIVATE_KEY=[your,array,of,numbers,here]

# Deployed Solana program ID (smart contract address)
SOLANA_PROGRAM_ID=YourProgramIdHere

# Solana cluster: devnet | testnet | mainnet-beta
SOLANA_CLUSTER=devnet

# ======================
# Worker Configuration
# ======================
# Blockchain worker polling interval in milliseconds
BLOCKCHAIN_WORKER_POLL_MS=5000

# Maximum retry attempts for blockchain jobs
JOB_MAX_ATTEMPTS=5

# ======================
# Frontend / URLs
# ======================
# Frontend URL for QR code generation and CORS
FRONTEND_URL=http://localhost:5173




