# Backend Environment Configuration Template
# Copy this file to .env and update with your actual credentials

# Server Configuration
PORT=7777

# Database Configuration
# Local MongoDB: mongodb://localhost:27017/vitaledge
# MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/vitaledge
MONGODB_URI=mongodb://localhost:27017/vitaledge

# Firebase Configuration (Service Account)
# Get these from Firebase Console -> Project Settings -> Service Accounts -> Generate New Private Key
FIREBASE_PROJECT_ID=your-project-12345
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-12abc@your-project-12345.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nMIIEvQIBADANBgkqhkiG9w0BAQEFAASCBKcwggSjAgEAAoIBAQExample123\nYour_Private_Key_Content_Here_Each_Line_Separated_By_\\n\nReplace_This_With_Your_Actual_Private_Key_From_Firebase\n-----END PRIVATE KEY-----\n"

# Solana Configuration (Optional - for blockchain features)
# Generate with: solana-keygen new --outfile ~/solana-wallet/keypair.json
SOLANA_WALLET_PATH=/home/user/solana-wallet/keypair.json

# Cloudinary Configuration (for image storage and optimization)
# Get these from Cloudinary Dashboard -> Settings -> Security
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=000000000000
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# CORS Configuration
# Frontend URL for CORS (development)
FRONTEND_URL=http://localhost:5173
# Add production frontend URL here when deploying
# FRONTEND_URL=https://your-frontend-domain.com
